{% extends 'base.html.twig' %} {% block title %}Acceuil Marmite Ronde{% endblock
%} {% block body %}


  <div class="col py-3">
  <h1>Hello Marmite ronde</h1>

  <br />
<div class="container-fluid">
  <div class="row">
    {% for recipe in recipes %}
    <div class="col-lg-4 col-md-6">
      <div class="card">
        {% if not recipe.media is empty %}
          <img src="{{ asset('./uploads/images/' ~ recipe.media[0].path) }}" alt="{{ recipe.media[0].title }}" />
        {% else %}
          <img src="{{ asset('./images/no_Image.png') }}" alt="" />
        {% endif %}
        <div class="card-body">
          <h2 class="card-text">
            {{ recipe.title }}
          </h2>
          <p class="card-text">
            {{ recipe.difficulty.label }}
          </p>
          <a
            href="{{ path('recipe_show', { id: recipe.id }) }}"
            class="btn btn-primary"
            target="_blank"
            >Voir la recette</a
          >
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>

</div>
</div>
</div>
{% endblock %}
