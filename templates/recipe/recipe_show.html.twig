{% extends 'base.html.twig' %} {% block title %}Recette{% endblock %} {%
    block body %}
    
    <div class="col py-3">
      <h1>{{ recipe.title }}</h1>
<br /><br />
<div class="row">
  <div class="col-lg-4 col-md-6" style="margin-bottom: 10px">
    <div class="card">
      {% for image in recipe.media %}
          <img src="{{ asset('./uploads/images/' ~ image.path) }}" alt="{{ image.title }}" />
        {% else %}
        TODO empty image
          <img src="" alt="" />
        {% endfor %}
      <div class="card-body">
        <p class="card-text">
          {{ recipe.difficulty.label }}
        </p>
        <p class="card-text">
          Temps de préparation : {{ recipe.duration }} min.
        </p>
        <p class="card-text">
          Pour {{ recipe.numberPers }} personnes.
        </p>
        <p class="card-text">
          {{ recipe.content }}
        </p>
      </div>
    </div>
  </div>
</div>

{% if recipe.user.id == app.user.id %}
<a
href="{{ path('media_add', { id: recipe.id }) }}"
class="btn btn-primary"
target="_blank"
>Importer une image à ma recette</a
><br><br>
<a
href="{{ path('media_showbyrecipe', { id: recipe.id }) }}"
class="btn btn-primary"
target="_blank"
>Voir les images de ma recette</a
><br><br>
<a
href="{{ path('recipe_edit', { id: recipe.id }) }}"
class="btn btn-primary"
target="_blank"
>Modifier ma recette</a
>
{% endif %}
      <br>
      {{ form_start(form) }}

        {{ form_row(form.content) }}
      
        <button type="submit">Soumettre</button>

      {{ form_end(form) }}
    </div>
    </div>
    </div>
    
    {% endblock %}